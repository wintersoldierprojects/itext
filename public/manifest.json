{
  "name": "CherryGifts Chat",
  "short_name": "CherryGifts",
  "description": "Instagram-style messaging platform for CherryGifts customer support",
  "theme_color": "#1379f5",
  "background_color": "#f8f9fa",
  "display": "standalone",
  "orientation": "portrait",
  "scope": "/",
  "start_url": "/",
  "categories": ["communication", "social", "productivity"],
